# Electron Builder Environment Configuration
# Copy this file to .env and modify as needed

# Development settings
NODE_ENV=development
ELECTRON_START_URL=http://localhost:3000

# Build settings
ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true
ELECTRON_BUILDER_CACHE=false

# Publishing settings (for auto-updates)
GH_TOKEN=your_github_token_here
CSC_LINK=your_code_signing_certificate.p12
CSC_KEY_PASSWORD=your_certificate_password

# FFmpeg settings
FFMPEG_PATH=node_modules/ffmpeg-static/ffmpeg.exe
FFMPEG_LINUX_PATH=node_modules/ffmpeg-static/ffmpeg

# App settings
APP_NAME=Movami Screen Recorder
APP_VERSION=1.0.0
APP_DESCRIPTION=Professional screen recording made simple and free
APP_AUTHOR=Your Name
APP_LICENSE=MIT
